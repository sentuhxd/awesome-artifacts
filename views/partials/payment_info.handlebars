div class="modal fade" id="payment-modal" tabindex="-1" role="dialog" aria-labelledby="payment-modal-title" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable" role="document">
    <div class="modal-content text-center text-white bg-dark">

        <div class="modal-header text-white text-center py-1 mx-0 px-1">
            <h5 class="modal-title" id="payment-modal-title"> Check-out </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true"></span>
            </button>
        </div>
        <div class="modal-body">

            <div class="container-fluid">

                <form class="text-center text-white p-md-3">
                    <div class="form-row px-2">

                        <div class="col-md-6">
                            <label for="payment-name">Name</label>
                            <input type="text" class="form-control" id="payment-name" placeholder="Cool Person">
                        </div>
                        <div class="col-md-6">
                            <label for="payment-username">Username</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">@</span>
                                </div>
                                <input type="text" class="form-control" id="payment-username" placeholder="Username">
                            </div>
                        </div>
                        <div class="col py-1">
                            <label for="payment-email">Email <span class="text-muted">Required</span></label>
                            <input type="email" class="form-control" id="payment-email" placeholder="you@example.com">
                        </div>
                    </div>
                    <hr>
                    <h4 class="p-2">Payment <i class="fas fa-file-invoice-dollar"></i></h4>

                    <div class="form-row my-3 read-only-form">

                        <div class="col-3">
                            <div class="custom-control custom-control-inline custom-radio">
                                <input disabled id="pay-cc" name="pay" type="radio" class="custom-control-input" checked="" autocomplete="cc-type">
                                <label class="custom-control-label badge badge-primary p-2" for="pay-cc"><i class="fas fa-credit-card"> Credit</i></label>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="custom-control custom-control-inline custom-radio">
                                <input disabled id="pay-debit" name="pay" type="radio" class="custom-control-input" autocomplete="cc-type">
                                <label class="custom-control-label badge badge-primary p-2" for="pay-debit"><i class="fas fa-credit-card"> Debit</i></label>
                            </div>
                        </div>

                        <div class="col-3">
                            <div class="custom-control custom-control-inline custom-radio">
                                <input  disabled id="pay-paypal" name="pay" type="radio" class="custom-control-input" autocomplete="cc-type">
                                <label class="custom-control-label badge badge-primary p-2" for="pay-paypal">PayPal </label>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="custom-control custom-control-inline custom-radio">
                                <input disabled id="pay-btc" name="pay" type="radio" class="custom-control-input">
                                <label class="custom-control-label badge badge-primary p-2" for="pay-btc"> BTC</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-row py-2 my-2 read-only-form">

                        <div class="col-12">
                            <label for="cc-name">Name on card</label>
                            <input readonly type="text" class="form-control" id="cc-name" placeholder="John Doe" autocomplete="cc-name">
                            <small class="text-muted">Full name as displayed on card</small>
                            <div class="invalid-feedback">
                                Name on card is required
                            </div>
                        </div>

                        <div class="col-7">
                            <label for="cc-number">Credit card number</label>
                            <input readonly type="text" class="form-control" id="cc-number" placeholder="0000-0000-0000-0000" autocomplete="cc-number">
                            <div class="invalid-feedback">
                                Credit card number is required!
                            </div>
                        </div>

                        <div class="col-3">
                            <label for="cc-expiration">Expiration</label>
                            <input readonly type="text" class="form-control" id="cc-expiration" placeholder="07/19"autocomplete="cc-exp">
                            <div class="invalid-feedback">
                            Expiration date required
                            </div>
                        </div>

                        <div class="col-2">
                            <label for="cc-cvv">CVV</label>
                            <input readonly type="text" class="form-control" id="cc-cvv" placeholder="000" autocomplete="cc-csc">
                            <div class="invalid-feedback">
                                Security code required
                            </div>
                        </div>

                    </div>
                </form>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times-circle"> Cancel</i></button>            
            <div class="m-auto w-50">
                <button id="payment-button" class="btn btn-primary btn-block" type="submit">Submit Order</button>
            </div>
        </div>
    </div>
  </div>
</div>