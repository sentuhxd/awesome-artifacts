<div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    
                        <div class="col mb-5">
                            <div class="card h-100 bg-orange2">
                                <!-- Product image-->
                                <img src="../images/{{dataValues.image_name}}" alt="{{dataValues.description}}" />
                                <!-- Product details-->
                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <!-- Product name-->
                                        <h5 class="fw-bolder">{{dataValues.name}}</h5>
                                        <!-- Product price-->
                                        {{dataValues.price}}
                                    </div>
                                </div>
                                <!-- Product actions-->
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center">
                                        <a class="btn btn-primary " href="/category/{{dataValues.id}}" title="Click to shop all items in {{dataValues.name}}"> Shop {{dataValues.name}} </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
</div>