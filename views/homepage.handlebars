        {{!-- <link href="css/style.css" rel="stylesheet" /> --}}
        <link href="css/my.css" rel="stylesheet" />
    </head>
    <body>
        <!-- Header-->
        <header class="bg-orange2 py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder">Shop in style</h1>
                </div>
            </div>
        </header>
        <!-- Section-->
          <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container px-4 px-lg-5">
            <!-- Brand/logo -->
            <a class="navbar-brand" href="/">Your Brand</a>
            <!-- Navigation links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/user">User Page</a> <!-- Link to user.handlebars -->
                </li>
            </ul>
        </div>
    </nav>
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    {{#each products}}
                        <div class="col mb-5">
                            <div class="card h-100 bg-orange2">
                                <!-- Product image-->
                                <img class="card-img-top" src="{{this.imageUrl}}" alt="{{this.description}}" />
                                <!-- Product details-->
                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <!-- Product name-->
                                        <h5 class="fw-bolder">{{this.product_name}}</h5>
                                        <!-- Product price-->
                                        {{this.price}}
                                    </div>
                                </div>
                                <!-- Product actions-->
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center">
                                        <button class=" addtocart btn btn-outline-dark mt-auto" data-productId="{{this.id}}" onclick="alert('added to cart')">Add to Cart</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </section>
        <!-- Footer-->
        <footer class="py-5 bg-orange2">
            <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Awesome Artifacts 2023</p></div>
        </footer>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        
    </body>
</html> 