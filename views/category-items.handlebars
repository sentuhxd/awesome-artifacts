{{!-- LOGGED IN USER BROWSING CATEGORY ITEMS PAGE  --}}
<div class="jumbotron text-center my-0 py-3 px-0">
  <h1 class="display-4 font-weight-bold px-0">Shop Items <i class="fas fa-store-alt"></i></h1>
</div>
<div class="row my-3 mx-0" id="item-row">
  {{#each categoryitems}}
    {{!-- template called by inside the category_items.handlebars file to show all the items from the database for logged in user --}}
    <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    
                        <div class="col mb-5">
                            <div class="card h-100 bg-orange2">
                                <!-- Product image-->
                                <img class="card-img-top" src="{{dataValues.image_name}}" alt="{{dataValues.description}}" />
                                <!-- Product details-->
                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <!-- Product name-->
                                        <h5 class="fw-bolder">{{dataValues.name}}</h5>
                                        <!-- Product price-->
                                        {{dataValues.price}}
                                    </div>
                                </div>
                                <!-- Product actions-->
                               <div class="card-footer">
                                    <button type="submit" class="btn badge-pill btn-sm btn-primary add-item stretched-link" data-id="{{dataValues.id}}" data-price="{{dataValues.price}}" value="{{dataValues.id}}"
                                        data-toggle="tooltip" title="Add {{dataValues.name}} to your cart.">
                                            Add To Cart <i class="fas fa-cart-plus"></i>
                                        </button>
                                </div>
                            </div>
                        </div>
                    
                </div>
            </div>
  {{/each}}
  <!-- If no items to display show Catch all no items to display card -->
  {{#unless categoryitems}}
    <div class="col-sm-10 col-md-8 col-lg-6 col-xl-4 mx-auto">
      <div class="card p-1 m-2 text-center shadow-lg rounded-lg">
        <div class="card-header text-secondary px-0 px-0">
          <h4> No Items to display</h4>
        </div>

        <div class="card-body p-1 text-lead">
          <p>Sorry! We couldn't find any items currently</p>
        </div>

        <div class="card-footer">
          <a class="btn btn-primary" href="/"><i class="fas fa-store-alt"> Categories View</i></a>
        </div>
      </div>
    </div>
  {{/unless}}
</div>
