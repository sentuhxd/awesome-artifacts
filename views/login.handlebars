{{!-- Page to login  --}}
<div class="row d-flex justify-content-center">
    <div class="col-10 col-md-6 p-4 shadow-lg p-md-5 my-4 bg-white rounded" >
        <form>
            <div class="form-group">
                <label for="username-login">Username: </label>
                <input type="text" class="form-control" id="username-login" placeholder="Username" autocomplete="username">
                <small id="username-help" class="form-text text-muted">We'll never share your information with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="user-password">Password: </label>
                <input type="password" class="form-control " id="user-password" placeholder="Password" autocomplete="current-password">
            </div>
            <div id="login_error" class="alert alert-warning font-weight-bolder text-center invisible text-break" role="alert">
            </div>
                <button type="submit" id="login_btn" class="btn-block btn btn-primary font-weight-bold mt-3"> Log-in <i class="fas fa-sign-in-alt"> </i></button>
                <button id="create-new-account" type="submit" class="btn btn-primary btn-block">Create Account<i
                    class="ml-3 fas fa-user-plus"></i></button>
        </form>     
    </div>
</div>